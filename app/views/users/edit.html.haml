.wrapper__edit
  .edit
    .edit__header
      EDIT
    .edit__main
      .edit__main__top
        %h3 INFORMATION
      .edit__main__inner
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .form-group
          .form-group__nickname
            .form-group__title
              NICK NAME
              %span.formRequire must
            = f.text_field :nickname,class: "form-group-box", placeholder: " maxlength 6", autofocus: true, maxlength: ""
          .form-group__email
            .form-group__title
              E-MAIL
              %span.formRequire must
            = f.email_field :email,class: "form-group-box", placeholder: " divetweet@divetweet.com"
          / .form-group__password
          /   .form-group__title
          /     PASSWORD
          /     %span.formRequire must
          /   = f.password_field :password,class: "form-group-box", placeholder: " minimum password 6length", autocomplete: "off"
          / .form-group__password
          /   .form-group__title
          /     PASSWORD
          /     %span.formRequire must
          /   = f.password_field :password,class: "form-group-box", placeholder: " minimum password 6length", autocomplete: "off"
          .form-group__profile
            .form-group__title
              PROFILE
            = f.text_area :text,class: "form-group-box profile-box", placeholder: " maxlength 800", autofocus: true, maxlength: "800"
        .form-group__submit
          = f.submit "UPDATE"
